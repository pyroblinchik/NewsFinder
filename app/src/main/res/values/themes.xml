<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsFinder" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorSurface">@color/light_green</item>
        <item name="colorOnPrimary">@color/dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="darkGreen24UbuntuBold">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>
    <style name="darkGreen20UbuntuBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="fontFamily">@font/ubuntu_bold</item>
    </style>
    <style name="darkGreen16UbuntuBold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/green_black</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="black14RobotoRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="black14UbuntuMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="gray12UbuntuMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>
    <style name="gray14UbuntuMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>
    <style name="gray16UbuntuMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="darkGray20UbuntuMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_transparency_68</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="green12UbuntuMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorSurface">@color/light_green</item>
        <item name="colorOnPrimary">@color/dark_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
    </style>
</resources>