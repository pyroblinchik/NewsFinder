<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyroblinchik.newsfinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SKApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsFinder">
        <activity
            android:name=".presentation.newsCard.NewsCardActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.language.LanguageActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.favourites.FavouritesActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.menu.MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>